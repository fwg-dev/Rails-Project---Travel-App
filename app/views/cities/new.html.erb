<h1>Add a new city</h1>

<% if @city.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@city.errors.count, "error") %>
      prohibited this visit from being saved:
    </h2>

    <ul>
    <% @city.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :city, url: '/cities' do |f| %>
  City Name: <%= f.text_field :name %> <br><br>

  <%= f.fields_for :countries do |country|%>
  Select an existing country:  <%= country.collection_select(:country, Country.all, :id, :name)  %>
  Or add a new country: <%= country.text_field :name %>
  <% end %>
    <br><br>
  <%= f.submit "Save" %>
<% end %>