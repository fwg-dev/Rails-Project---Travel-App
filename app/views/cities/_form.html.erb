<% if city.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(city.errors.count, "error") %>
      prohibited this visit from being saved:
    </h2>

    <ul>
    <% city.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for city  do |f| %>
  City Name: <%= f.text_field :name %> <br><br>

  Select an existing country:  <%= f.collection_select(:country_id, Country.all, :id, :name, {include_blank: true})  %>


<%= f.fields_for :country_field do |country_field|%>

  Or add a new country: <%= country_field.text_field :name %>
  <% end %>


    <br><br>
  <%= f.submit "Save" %>
<% end %>